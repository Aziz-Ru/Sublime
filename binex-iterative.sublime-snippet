int binpow(int base,int pow){
      int ans=1;
      while (pow)
      {
      if(pow&1) ans*=base;//ans=ans*base%m;
       base*=base;//base=base*base%m;
       pow/=2;
      }
    return ans;
  }
  
]]></content>
